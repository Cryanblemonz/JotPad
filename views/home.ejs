<%- include('partials/header') %>
<section id="intro">
    <div id="title">
        <h1 id="writtenTop">JotPad</h1>
        <div class="block"><h2  class="hidden" id="writtenBottom"><i>~Jot that down~</i></h2></div>
    </div>
</section>

<section id="get-started">
    <div>
        <h1 class="started">Get Started</h1>
        <h3 class="share">Share your thoughts on Jotpad</h3>
        <button class="btn btn-dark" action="/register" method="post" name="register">Sign up!</button>
        <button class="btn btn-light" action="/login" method="post" name="login">Sign in!</button>
    </div>
</section>
<hr>
<section id="popular">
    <h1 class="popular-heading">Popular Posts</h1>
    
    <% if(posts.length!=0){ %>
        <% posts.forEach(function(post){ %>
            <div class="post">
                <h3 class="left"><%= post.title %> </h2>
                <p class="left"><strong><%= post.author %> </strong></p>
                <p class="left"> <%= post.body.substring(0,300) + " ..." %> <a href="/posts/<%= post.title %>">Read More</a></p>
                <hr>
            </div>
       <% }) %>
   <% } else { %>
        <h2>Nothing here yet! Try posting our first story!</h2>
   <% } %>

 
 



</section>



<%- include('partials/footer') %> 